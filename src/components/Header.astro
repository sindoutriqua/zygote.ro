---
import { getAllGenerators } from "../generators/registry";
import ThemeToggle from "./ThemeToggle.astro";

const generators = getAllGenerators();
---

<header
    class="sticky top-0 z-50 w-full border-b border-slate-200 dark:border-slate-800 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md"
>
    <div
        class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8"
    >
        <!-- Logo -->
        <div class="flex items-center">
            <a
                href="/"
                class="flex items-center gap-2 font-bold text-xl text-slate-900 dark:text-white"
            >
                <span class="text-teal-600 dark:text-teal-400">zygote</span>.ro
            </a>
        </div>

        <!-- Navigation (Desktop) -->
        <nav class="hidden md:flex items-center gap-6">
            <div class="relative group">
                <button
                    class="flex items-center gap-1 text-sm font-medium text-slate-700 hover:text-teal-600 dark:text-slate-200 dark:hover:text-teal-400 transition-colors py-2"
                >
                    Generators
                    <svg
                        class="w-4 h-4 transition-transform group-hover:rotate-180"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>

                <!-- Dropdown Menu -->
                <div
                    class="absolute left-0 top-full mt-1 w-56 rounded-xl bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 shadow-lg p-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all transform origin-top-left"
                >
                    {
                        generators.map((gen) => (
                            <a
                                href={`/generators/${gen.id}`}
                                class="block rounded-lg px-4 py-2 text-sm text-slate-700 dark:text-slate-200 hover:bg-slate-50 dark:hover:bg-slate-800 hover:text-teal-600 dark:hover:text-teal-400"
                            >
                                {gen.name}
                            </a>
                        ))
                    }
                </div>
            </div>

            <a
                href="/about"
                class="text-sm font-medium text-slate-700 hover:text-teal-600 dark:text-slate-200 dark:hover:text-teal-400 transition-colors"
            >
                About
            </a>
        </nav>

        <!-- Actions -->
        <div class="flex items-center gap-4">
            <a
                href="https://github.com/sindoutriqua/zygote.ro"
                target="_blank"
                rel="noopener noreferrer"
                class="hidden sm:block text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-white transition-colors"
                aria-label="GitHub"
            >
                <svg
                    class="w-5 h-5"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                    ><path
                        fill-rule="evenodd"
                        d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                        clip-rule="evenodd"></path></svg
                >
            </a>
            <div
                class="h-6 w-px bg-slate-200 dark:bg-slate-800 hidden sm:block"
            >
            </div>
            <ThemeToggle />
        </div>
    </div>
</header>
